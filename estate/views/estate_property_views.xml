    <!-- Estate Managment Property Type -->
    <record id="action_estate_property_type_list" model="ir.actions.act_window">
        <field name="name">Property type</field>
        <field name="res_model">estate_property_type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Estate Managment Property Tags -->
    <record id="action_estate_property_tag_list" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate_property_tags</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <!-- Estate Managment Property Offer -->
    <record id="action_estate_property_offer" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate_property_offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <!-- Estate Managment Property Offer Tree -->
    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate_property_offer.tree</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="price"/>
                <field name="status"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <!-- Estate Managment Property Offer Form -->
    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate_property_offer.form</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status" decoration-muted="status == 'refused'" decoration-success="status == 'accepted'"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Estate Managment Property Type Form -->
    <record id="estate_property_type_form" model="ir.ui.view">
        <field name="name">estate_property_type.form</field>
        <field name="model">estate_property_type</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(action_estate_property_offer)d" string="Offers" type="action" icon="fa-money" class="oe_stat_button" />
                </header>
                <sheet>
                    <field name="name"/>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Estate Managment Property Type List -->
    <record id="estate_property_type_list" model="ir.ui.view">
        <field name="name">estate_property_type.list</field>
        <field name="model">estate_property_type</field>
        <field name="arch" type="xml">
            <tree string="Property Types" create="true">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Estate Managment Property Tags Tree -->
    <record id="estate_property_tags_tree" model="ir.ui.view">
        <field name="name">estate_property_tags.tree</field>
        <field name="model">estate_property_tags</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="color"/>
            </tree>
        </field>
    </record>

</odoo>