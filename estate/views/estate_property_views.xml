<?xml version="1.0"?>
<odoo>

    <!-- Estate Managment Property List -->
    <record id="action_estate_property_list" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="search_view_id" ref="estate_property_search"/>
        <field name="context">{'search_default_available_properties': 1}</field>-->
    </record>

    <!-- Estate Managment Tree -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate_property.tree</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <tree string="estate">
                <field name="property_type_id"/>
                <field name="name"/>
                <field name="postal_code"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="availability_date" optional="1"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Estate Managment Form -->
    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate_property.form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button name="action_cancel" string="Cancel" type="object" class="oe_highlight"/>
                    <button name="action_sold" string="Sold" type="object" class="oe_highlight"/>
                    <field name="property_type_id" />
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <group>
                                <h3>
                                    <field name="name"/>
                                </h3>
                                <field name="tag_ids" options="{'color_fields': 'color'}" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="property_type_id" options="{'no_create_edit': True}" />
                                <field name="postal_code"/>
                                <field name="availability_date"/>  
                            </group>                          
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                        <notebook>
                            <!-- Page Description -->
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" invisible="not garden"/>
                                    <field name="garden_orientation" invisible="not garden"/>
                                    <field name="total_area" />
                                </group>
                            </page>
                            <!-- Page Other Info -->
                            <page string="Other Info">
                                <group>
                                    <field name="buyer_id"/>
                                    <field name="seller_id"/>
                                </group>
                            </page>
                            <!-- Page Offers -->
                            <page string="Offers">
                                <group>
                                    <field name="offer_ids" widget="one2many_list" readonly="state in ('offer_accepted', 'sold', 'cancelled')">
                                        <tree>
                                            <field name="price"/>
                                            <field name="partner_id"/>
                                            <field name="validity"/>
                                            <field name="date_deadline"/>
                                            <button name="action_accept" type="object" string="Accept" icon="fa-check">
                                                <modifiers>
                                                    <modifier string="Hide" invisible="[('state', '!=', 'offer_received')]"/>
                                                </modifiers>
                                            </button>
                                            <button name="action_refused" type="object" string="Refused" icon="fa-times">
                                                <modifiers>
                                                    <modifier string="Hide" invisible="[('state', '!=', 'offer_received')]"/>
                                                </modifiers>
                                            </button>
                                            <field name="status"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

